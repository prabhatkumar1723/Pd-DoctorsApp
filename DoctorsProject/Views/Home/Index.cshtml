@model DoctorsProject.Models.DoctorDetailsViewModel
@{
    ViewBag.Title = "Index";
}
<header>
    <style>
        #doctorTable {
            font-family: "Trebuchet MS", Arial, Helvetica, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

            #doctorTable td, #doctorTable th {
                border: 1px solid #ddd;
                padding: 8px;
            }

            #doctorTable tr:nth-child(even) {
                background-color: #f2f2f2;
            }

            #doctorTable tr:hover {
                background-color: #ddd;
            }

            #doctorTable th {
                padding-top: 12px;
                padding-bottom: 12px;
                text-align: left;
                background-color: #4CAF50;
                color: white;
            }
    </style>
    <script src="~/Scripts/jquery.signalR-2.4.1.js"></script>
    <script src="~/Scripts/jquery.signalR-2.4.1.min.js"></script>
    <script src="signalr/hubs"></script>

</header>
<div class="jumbotron">
    <h2>Doctor details</h2>
    <p id="paragraph">
        This one is for you
    </p>
</div>
<div>
    <table border="1" class="col-md-12" id="doctorTable">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
                <th>Phone Number</th>
                <th>Designation</th>
                <th>Years Od Experience</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.DoctorDetailsItemViewModelList)
            {

                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Address</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.Designation</td>
                    <td>@item.YearOfExperience</td>
                </tr>
            }
        </tbody>
    </table>
</div>

